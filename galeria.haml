!!! html

%html{:lang => 'en-GB'}
	%head
		%title Agata's flowers
		%meta{:charset => 'UTF-8'}
		%meta{:name => 'description', :content => 'A website about skils of Agata Krężałek in flowers'}
		%meta{:name => 'keywords', :content => 'Fotos, flowers, production'}
		%meta{:name => 'author', :content => 'Artur Brzozowski'}
		%link{:rel => 'stylesheet', :type => 'text/css', :href => 'css/bootstrap.min.css'}
		%link{:rel => 'stylesheet', :type => 'text/css', :href => 'css/style.css'}
		%script{:src => 'js/bootstrap.js'}
		%script{:src => 'http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js'}
		%script{:src => 'js/app.js'}
		%script{:src => 'js/control.js'}
	%body{'ng-app' => 'myApp'}
		
		.container{'ng-controller' => 'MainController'}
			.row
				.col-lg-12.col-md-12.col-sm-12.zdjecia.text-center{'ng-repeat' => 'zdjecia in zdjecias' }	
					%img.img-responsive.img-rounded{'ng-src' => '{{ zdjecia.img }}'}
		 
		